<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_dark"
    android:padding="@dimen/padding4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin4"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/layoutTemperature_textView_morningTemp"
            style="@style/partsOfDay"
            android:text="44C"  />

        <TextView
            android:id="@+id/layoutTemperature_textView_dayTemp"
            style="@style/partsOfDay"
            android:text="44C"  />

        <TextView
            android:id="@+id/layoutTemperature_textView_eveningTemp"
            style="@style/partsOfDay"
            android:text="44C"  />

        <TextView
            android:id="@+id/layoutTemperature_textView_nightTemp"
            style="@style/partsOfDay"
            android:text="44C" />

    </LinearLayout>
    <!-- temperatures - end-->
    <!-- line -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout style="@style/relative_layout_line">

            <View style="@style/horizontal_line" />

            <View style="@style/vertical_line" />

        </RelativeLayout>


        <RelativeLayout style="@style/relative_layout_line">

            <View style="@style/horizontal_line" />

            <View style="@style/vertical_line" />
        </RelativeLayout>

        <RelativeLayout style="@style/relative_layout_line">

            <View style="@style/horizontal_line" />

            <View style="@style/vertical_line" />
        </RelativeLayout>

        <RelativeLayout style="@style/relative_layout_line">

            <View style="@style/horizontal_line" />

            <View style="@style/vertical_line" />
        </RelativeLayout>
    </LinearLayout>
    <!-- line end-->
    <!--parts of day-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/partsOfDay"
            android:text="@string/morning" />

        <TextView
            style="@style/partsOfDay"
            android:text="@string/day" />

        <TextView
            style="@style/partsOfDay"
            android:text="@string/evening" />

        <TextView
            style="@style/partsOfDay"
            android:text="@string/night" />
    </LinearLayout>
    <!--parts of day -end-->
</LinearLayout>