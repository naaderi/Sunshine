<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    style="@style/background_activity"
    android:layout_height="wrap_content"
    android:background="@color/background_main">
    <!-- top views-->
    <include
        android:id="@+id/rowListViewForecast_layout_description_icon_date"
        style="@style/topViewsInRowLayout"
        layout="@layout/layout_description_icon_date" />

    <include
        android:id="@+id/rowListView_layout_temps"
        style="@style/tempsInRowLayout"
        layout="@layout/layout_temperatures" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_mid"
        android:orientation="vertical"
        android:paddingBottom="@dimen/padding8">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <include
                android:id="@+id/rowListViewForecast_layout_infoBox_atmosphericPressure"
                style="@style/infoBoxInRowLayout"
                layout="@layout/info_box_layout" />

            <include
                android:id="@+id/rowListViewForecast_layout_infoBox_minMaxTemp"
                style="@style/infoBoxInRowLayout"
                layout="@layout/info_box_layout" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <include
                android:id="@+id/rowListViewForecast_layout_infoBox_windSpeed"
                style="@style/infoBoxInRowLayout"
                layout="@layout/info_box_layout" />

            <include
                android:id="@+id/rowListViewForecast_layout_infoBox_humidity"
                style="@style/infoBoxInRowLayout"
                layout="@layout/info_box_layout" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <include
                android:id="@+id/rowListViewForecast_layout_infoBox_windDirection"
                style="@style/infoBoxInRowLayout"
                layout="@layout/info_box_layout" />

            <include
                android:id="@+id/rowListViewForecast_layout_infoBox_clouds"
                style="@style/infoBoxInRowLayout"
                layout="@layout/info_box_layout" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_thickness"
        android:layout_marginTop="@dimen/margin8"
        android:background="@color/background_black" />
</LinearLayout>